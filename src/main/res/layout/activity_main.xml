<?xml version="1.0" encoding="utf-8"?>
<circlelayout.CircleLayoutView xmlns:circle="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    circle:centerViewId="@+id/centerView"
    circle:direction="clockwise"
    circle:angle="0"
    >


    <TextClock
        android:layout_width="wrap_content"
        android:id="@+id/centerView"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:textColor="@color/colorAccent"
        android:id="@+id/text1"
        android:text="1"
        android:textSize="24dp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:textColor="@color/colorAccent"
        android:id="@+id/text2"
        android:text="2"
        android:textSize="24dp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:textColor="@color/colorAccent"
        android:id="@+id/text3"
        android:text="3"
        android:textSize="24dp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:textColor="@color/colorAccent"
        android:id="@+id/text4"
        android:text="4"
        android:textSize="24dp"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="wrap_content"
        android:src="@drawable/ic_launcher"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_width="wrap_content"
        android:textColor="@color/colorAccent"
        android:id="@+id/text5"
        android:text="5"
        android:textSize="24dp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:textColor="@color/colorAccent"
        android:id="@+id/text6"
        android:text="6"
        android:textSize="24dp"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:textColor="@color/colorAccent"
        android:id="@+id/text7"
        android:text="7"
        android:textSize="24dp"
        android:layout_height="wrap_content" />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:textColor="@color/colorAccent"
        android:id="@+id/text8"
        android:text="8"
        android:textSize="24dp"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:textColor="@color/colorAccent"
        android:id="@+id/text9"
        android:text="9"
        android:textSize="24dp"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="wrap_content"
        android:text="按钮"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:textColor="@color/colorAccent"
        android:id="@+id/text10"
        android:text="10"
        android:textSize="24dp"
        android:layout_height="wrap_content" />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:textColor="@color/colorAccent"
        android:id="@+id/text11"
        android:text="11"
        android:textSize="24dp"
        android:layout_height="wrap_content" />




</circlelayout.CircleLayoutView>
