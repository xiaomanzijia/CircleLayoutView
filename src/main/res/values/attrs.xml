<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CircleLayoutView">
        <attr name="centerViewId" format="reference"></attr>
        <attr name="angle" format="float"></attr>
        <attr name="angleOffset" format="float"></attr>
        <attr name="radius" format="dimension"></attr>
        <attr name="circlePresentStyle">
            <enum name="fitSmallChild" value="0"></enum>
            <enum name="fitLargeChild" value="1"></enum>
        </attr>
        <attr name="direction">
            <enum name="clockwise" value="-1"></enum>
            <enum name="counterClockwise" value="1"></enum>
        </attr>
    </declare-styleable>
</resources>